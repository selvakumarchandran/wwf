<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="cn.com.icore.user.model.SysRole"
		table="icore_role">

		<id name="id" type="java.lang.Long" column="id">
			<generator class="assigned" />
		</id>
		<property name="name" column="name" type="java.lang.String" length="50"
			not-null="true" update="true">
		</property>


		<property name="describe" column="describe_mysql"  type="java.lang.String"
			length="50" not-null="false" update="true">

		</property>

       <set name="sysMenus" lazy="true"  inverse="false" cascade="none"  table="sysroletosysmenu" order-by="sysmenuid">
           <key>
           <column name="sysroleid"/>
           </key>
           <many-to-many column="sysmenuid" class="cn.com.icore.user.model.SysMenu"  />
        </set>
        <set name="sysPopedoms"   lazy="true"  inverse="false" cascade="none" table="sysroletosyspopedom" order-by="syspopedomid">
           <key>
           <column name="sysroleid"/>
           </key>
           <many-to-many column="syspopedomid"    class="cn.com.icore.user.model.SysPopedom" />
        </set>

	</class>
</hibernate-mapping>
